{
	"name" : "storepress-base-plugin",
	"version" : "1.0.0",
	"description" : "StorePress base Plugin",
	"author" : "Emran Ahmed",
	"private" : true,
	"license" : "GPLv3",
	"repository" : {
		"type" : "git",
		"url" : "https://github.com/EmranAhmed/storepress-base-plugin"
	},
	"bin" : {
		"package" : "./bin/package.js"
	},
	"scripts" : {
		"postinstall" : "composer install",
		"clean" : "rimraf vendor && rimraf build",
		"ready" : "npm run clean && npm run build && npm run build:php",
		"build:php" : "composer install --no-dev --optimize-autoloader",
		"lint:php" : "composer run lint",
		"lint:php-fix" : "composer run format",
		"build" : "wp-scripts build --webpack-copy-php --experimental-modules",
		"check-engines" : "wp-scripts check-engines",
		"check-licenses" : "wp-scripts check-licenses",
		"format" : "wp-scripts format",
		"lint:css" : "wp-scripts lint-style",
		"lint:js" : "wp-scripts lint-js",
		"lint:md:docs" : "wp-scripts lint-md-docs",
		"lint:pkg-json" : "wp-scripts lint-pkg-json",
		"packages-update" : "wp-scripts packages-update",
		"plugin-zip" : "wp-scripts plugin-zip",
		"prepackage" : "rimraf languages && npm run language && npm run ready",
		"package" : "./bin/package.js",
		"postpackage" : "composer install",
		"prezip" : "rimraf languages && npm run language && npm run ready",
		"zip" : "./bin/package.js --zip",
		"postzip" : "composer install",
		"test:e2e" : "wp-scripts test-e2e",
		"test:unit" : "wp-scripts test-unit-js",
		"rimraf" : "./node_modules/rimraf/bin.js",
		"start" : "rimraf build && wp-scripts start --webpack-copy-php --experimental-modules",
		"language" : "./vendor/bin/wp i18n make-pot . languages/storepress-base-plugin.pot --exclude=assets,bin,build,node_modules,vendor,languages --package-name=\"StorePress Base Plugin\" --headers='{\"Report-Msgid-Bugs-To\":\"https://storepress.com/\", \"language-team\":\"LANGUAGE <EMAIL@ADDRESS>\"}'",
		"language-json" : "./vendor/bin/wp i18n make-json languages --no-purge --pretty-print",
		"add" : "npx @wordpress/create-block@latest --namespace storepress --variant dynamic --no-plugin",
		"add-static" : "npx @wordpress/create-block@latest --namespace storepress --no-plugin",
		"add-interactive" : "npx @wordpress/create-block@latest --template @wordpress/create-block-interactive-template --namespace storepress --no-plugin"
	},
	"dependencies" : {
		"@storepress/components" : "^0.0.2",
		"@storepress/icons" : "^2.0.0",
		"@storepress/utils" : "^0.1.0",
		"@wordpress/dom-ready" : "^3.55.0",
		"@wordpress/icons" : "^9.46.0",
		"classnames" : "^2.3.2"
	},
	"devDependencies" : {
		"@woocommerce/dependency-extraction-webpack-plugin" : "^2.4.0",
		"@woocommerce/eslint-plugin" : "^2.2.0",
		"@wordpress/base-styles" : "^4.46.0",
		"@wordpress/blocks" : "^12.32.0",
		"@wordpress/browserslist-config" : "^5.38.0",
		"@wordpress/dependency-extraction-webpack-plugin" : "^5.6.0",
		"@wordpress/i18n" : "^4.55.0",
		"@wordpress/prettier-config" : "^3.12.0",
		"@wordpress/scripts" : "^27.6.0",
		"@wordpress/stylelint-config" : "^21.38.0",
		"eslint" : "^8.52.0",
		"eslint-import-resolver-typescript" : "3.6.1",
		"eslint-import-resolver-webpack" : "0.13.8",
		"eslint-plugin-import" : "2.29.0",
		"eslint-plugin-prettier" : "^5.0.1",
		"eslint-plugin-you-dont-need-lodash-underscore" : "6.13.0",
		"fs-extra" : "^11.1.1",
		"prettier" : "npm:wp-prettier@latest",
		"rimraf" : "3.0.2",
		"webpack-remove-empty-scripts" : "^1.0.4"
	}
}
