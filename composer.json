{
	"name" : "storepress/base-plugin",
	"description" : "StorePress Base Plugin",
	"minimum-stability" : "stable",
	"license" : "GPLv3",
	"type" : "wordpress-plugin",
	"keywords" : [
		"gutenberg",
		"wordpress",
		"storepress",
		"plugin"
	],
	"homepage" : "https://github.com/EmranAhmed/storepress-base-plugin#readme",
	"authors" : [
		{
			"name" : "Emran Ahmed",
			"email" : "emran@storepress.com"
		},
		{
			"name" : "StorePress Inc.",
			"email" : "storepresshq@gmail.com"
		}
	],
	"require" : {
		"storepress/admin-utils" : "^1.8.5"
	},
	"require-dev" : {
		"woocommerce/woocommerce-sniffs" : "^1.0.0",
		"phpcompatibility/phpcompatibility-wp" : "^2.1.5",
		"wp-coding-standards/wpcs" : "^3.1.0",
		"wp-cli/wp-cli-bundle" : "v2.10.0"
	},
	"autoload" : {
		"psr-4" : {
			"StorePress\\Base\\" : "includes/"
		}
	},
	"config" : {
		"optimize-autoloader" : true,
		"sort-packages" : true,
		"allow-plugins" : {
			"dealerdirect/phpcodesniffer-composer-installer" : true
		}
	},
	"scripts" : {
		"format" : "./bin/phpcbf.sh --standard=phpcs.xml",
		"lint" : "./vendor/bin/phpcs --standard=phpcs.xml --warning-severity=0 --report-summary --report-source --ignore-annotations --report-full=phpcs-report.txt"
	}
}
